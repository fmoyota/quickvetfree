    <icon src="img/icon/Icono-QV-40x40.png" width="40" height="40" />
    <icon src="img/icon/Icono-QV-80x80.png" width="80" height="80" />
    <splash src="img/splash/QV-1242x2208.png" width="1242" height="2208" />
